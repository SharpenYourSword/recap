{
  "manifest_version": 2,
  "name": "RECAP viewer for Chrome",
  "description": "When a PACER document is available for free from the RECAP project, this adds a handy link to get the free copy.",
  "version": "1.0",
  "permissions": [
    "http://dev.recapextension.org/",
    "http://recapextension.org/",
    "*://*.uscourts.gov/",
    "notifications"
  ],
  "background": {
    "scripts": ["utils.js", "recap.js", "background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*.uscourts.gov/*"],
    "include_globs": ["*://ecf.*", "*://ecf-train.*", "*://pacer.*"],
    "css": ["style.css"],
    "js": ["jquery.min.js", "utils.js", "recap.js", "content.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "icon-16.png"
  ]
}
