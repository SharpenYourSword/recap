{
  "manifest_version": 2,
  "name": "RECAP",
  "description": "RECAP is a free extension from Free Law Project and the Center for Information Technology Policy at Princeton that improves the experience of using PACER, the online public access system for the U.S. federal courts. Saving you money and building the public domain since 2009.",
  "version": "0.8.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "*://*.recapextension.org/",
    "*://recapextension.org/",
    "*://*.uscourts.gov/",
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "utils.js",
      "notifier.js",
      "toolbar_button.js",
      "pacer.js",
      "recap.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*.uscourts.gov/*"],
    "include_globs": ["*://ecf.*", "*://ecf-train.*", "*://pacer.*"],
    "css": ["style.css"],
    "js": [
      "jquery.min.js",
      "utils.js",
      "notifier.js",
      "toolbar_button.js",
      "pacer.js",
      "recap.js",
      "content.js"
    ],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": {
      "19": "images/grey-19.png",
      "38": "images/grey-38.png"
    },
    "default_title": "RECAP: Not at a PACER site",
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "images/grey-16.png",
    "images/grey-32.png",
    "images/icon-16.png",
    "images/icon-32.png",
    "images/warning-16.png",
    "images/warning-32.png"
  ]
}
